
{{#partial "title"}}
    sign in
{{/partial}}

{{#partial "content"}}
    <!-- models.investors -->
    <div class="row">
        <div class="col-md-3"></div>
        <div class="investor-form col-md-6">
            <form action="/investor-view" method="post">
                <h4 class="text-center"> FILL FORM </h4>
                <div class="form-group">
                    <label for="name">Investor's Name</label>
                    <input class="form-control" id="name" name="name" type="text" placeholder="Investor's Name" required>
                </div>
                <div class="form-group">
                    <label for="ranger">Investor Contacts</label>
                    <input class="form-control" id="contacts" name="contacts" type="text" placeholder="Investor Contacts" required>
                </div>
                <div class="form-group text-white">
                    <label for="category">Category interested in</label>
                    <select class="form-control" name="category" id="category">
                        <option value=""></option>
                        <option value="e-commerce">E-Commerce</option>
                        <option value="technology">Techology</option>
                        <option value="health">Health</option>
                        <option value="agribusiness">Agribusiness</option>
                        <option value="transport">Transport</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="name">Amount to invest</label>
                    <input class="form-control" id="amount" name="amount" type="text" placeholder="Amount" required>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-secondary btn-lg">Sign In</button>
                </div>
            </form>
        </div>
        <div class="col-md-3"></div>
    </div>
{{/partial}}

{{> layout.hbs}}